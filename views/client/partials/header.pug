include ../mixins/sub-menu.pug

header.header
  .container
    .row.align-items-center
      .col-3
        .inner-logo
          a(href="/")
            img(src="/images/logo.svg", alt="Logo")

      .col-5
        form(
          action="/search"
          method="GET"
        ) 
          div(class="form-group d-flex mb-0")
            input(
              type="text"
              placeholder="Nhập từ khóa..."
              class="form-control"
              name="keyword"
              value=keyword
            )
            button(
              type="submit"
              class="btn btn-primary"
            ) 
              i.fa-solid.fa-magnifying-glass
      
      .col-4
        .inner-menu
          ul
            li
              a(href="/") Trang chủ
            li(class="sub-menu")
              a(href="/products") Sản phẩm
              +sub-menu(layoutProductCategory)
            li 
              a(href="/cart") Giỏ hàng
                i(class="fa-solid fa-cart-shopping")
                | (#{miniCart ? miniCart.products.length : 0})
            if(user)
              li 
              a(href="/user/info") #{user.fullName}
              li 
              a(href="/user/logout") Đăng Xuất
            else 
              li 
                a(href="/user/register") Đăng ký
              li 
                a(href="/user/login") Đăng nhập
                  i(class="fa-solid fa-right-to-bracket")
            